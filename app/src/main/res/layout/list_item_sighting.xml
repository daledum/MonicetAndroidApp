<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_sighting_height">

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_stop_brown_24dp"
        android:id="@+id/end_finish_imageButton"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/sighting_details"
        android:layout_weight="3">

        <TextView
            android:id="@+id/specie_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            tools:text="Sperm whale"
            android:layout_weight="1"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:id="@+id/quantity_and_time"
            android:layout_weight="1">

            <TextView
                android:id="@+id/start_animal_quantity_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="0"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/sighting_start_time_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="time"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/end_animal_quantity_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="0"
                android:layout_weight="1"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/sighting_end_time_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="time"
                android:layout_weight="1"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_comment_black_24dp"
        android:id="@+id/comments_imageButton"
        android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/delete_imageButton"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@android:drawable/ic_delete" />

</LinearLayout>